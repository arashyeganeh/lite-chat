{
  "name": "lite-chat",
  "version": "0.1.0",
  "description": "A lightweight chat application built with Node.js, Express and Socket.IO, designed for real-time communication without the need for a persistent database.",
  "main": "app.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "concurrently \" npx tailwindcss -i ./src/style.css -o ./public/style.css --watch \"  \" nodemon app.js \" ",
    "build": "npx tailwindcss -i ./src/style.css -o ./public/style.css --minify"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22"
  },
  "dependencies": {
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "socket.io": "^4.6.2",
    "tailwindcss": "^3.3.2",
    "@tailwindcss/forms": "^0.5.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arashyeganeh/Lite-Chat"
  },
  "keywords": [
    "node",
    "express",
    "socket",
    "chat-room"
  ],
  "author": "Arash Yeganeh",
  "license": "MIT"
}
