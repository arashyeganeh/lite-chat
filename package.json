{
  "name": "lite-chat",
  "version": "0.2.1",
  "description": "A lightweight chat application built with Node.js, Express and Socket.IO, designed for real-time communication without the need for a persistent database.",
  "main": "app.js",
  "scripts": {
    "start": "node ./app.js",
    "dev": "concurrently \"npx webpack --mode=development --watch --config webpack.config.js\" \"nodemon app.js\" ",
    "build": "npx webpack --mode=production --config webpack.config.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "node-sass": "^9.0.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.24",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^8.5.1",
    "sass": "^1.63.6",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.3",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "socket.io": "^4.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arashyeganeh/Lite-Chat"
  },
  "keywords": [
    "node",
    "express",
    "socket",
    "chat-room"
  ],
  "author": "Arash Yeganeh",
  "license": "MIT",
  "browserslist": [
    ">0.3%, last 5 versions, not dead"
  ]
}
